{{#each evento}}
<div class="container mt-4">
  <div align="center" class="form-group">
    <h2>Editar Evento</h2>
  </div>
  <form method="POST" action="/admin/editevento" enctype="multipart/form-data">
    <input type="hidden" name="id" value="{{this._id}}">

    <div class="form-group">
      <label for="nome">Título: </label>
      <input type="text" class="form-control" name="titulo" placeholder="Ex: Pinóquio " value="{{this.titulo}}">
    </div>
    <div class="form-group">
      <label for="exampleFormControlTextarea1">Descrição</label>
      <textarea class="form-control" name="descricao" rows="3">{{this.descricao}}</textarea>
    </div>
    <div class=" form-group">
      <label for="exampleFormControlFile1">Fotos</label>
      <span>
        <input id="input-2" name="eventoimg" type="file" class="form-control" multiple data-show-upload="true"
          data-show-caption="true">
      </span>
    </div>
    <br>
    <div class="container">
      <div class="row row-cols-4" id="imagem">
        {{#each this.imagem}}
        <div class="col mt-2">
          <button type="button" class="close" aria-label="Fechar">
          <span aria-hidden="true">&times;</span>
          </button>
          <img src="/{{this.path}}" class="rounded img-fluid" alt="Imagem responsiva">

        </div>
        {{/each}}
      </div>
      <ul id="listImg" />
      </ul>
    </div>

    <button type="submit" class="btn btn-success mt-4">Editar</button>
  </form>
</div>
{{/each }}